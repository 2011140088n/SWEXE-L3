<h1>Tweets#index</h1>
<% @tweets.each do |tweet| %>
    <p>
        <p>
        <strong>メッセージ:</strong>
        <%= tweet.message %>
        </p>

        <p>
        <strong>日付：</strong>
        <%= tweet.tdate %><%= (Time.now - tweet.tdate)%>
        </p>
        <%= link_to '削除',"/tweets/#{tweet.id}", method: :delete %>
        <%= link_to '表示',"/tweets/#{tweet.id}" %>
        <%= link_to '編集',"/tweets/#{tweet.id}/edit" %>
    </p>
<% end %>
<p><%= link_to '新規追加', '/tweets/new' %></p>